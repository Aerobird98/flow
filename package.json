{
  "name": "flow",
  "version": "0.11.1",
  "description": "A compact web based rich-text editor that builds on top of Slate-js with powerful, yet simple and accessible editing capabilities.",
  "private": true,
  "scripts": {
    "start": "npm run build-development",
    "build-development": "esbuild index.js --bundle --outdir=dist --loader:.js=jsx '--define:process.env.NODE_ENV=\"development\"' --jsx-factory=h --jsx-fragment=Fragment",
    "build-production": "esbuild index.js --bundle --minify --outdir=dist --loader:.js=jsx '--define:process.env.NODE_ENV=\"production\"' --jsx-factory=h --jsx-fragment=Fragment --sourcemap",
    "release": "npm run build-production && gh-pages -d dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Aerobird98/flow.git"
  },
  "author": "Aerobird98",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Aerobird98/flow/issues"
  },
  "homepage": "http://Aerobird98.github.io/flow",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.28",
    "@fortawesome/free-solid-svg-icons": "^5.13.0",
    "@fortawesome/react-fontawesome": "^0.1.10",
    "preact": "^10.4.4",
    "slate": "^0.58.3",
    "slate-history": "^0.58.3",
    "slate-react": "^0.58.3",
    "theme-ui": "^0.3.1"
  },
  "devDependencies": {
    "esbuild": "^0.5.3",
    "gh-pages": "^3.0.0",
    "prettier": "^2.0.5"
  }
}
